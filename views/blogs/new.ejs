<%- include('../partials/header') %>
<h1><%= title %></h1>

    <form action="/blogs/index" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="blog-title" name="blog-title" required>
        <br>
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" required>
        <br>
        <label for="platform">Content:</label>
        <input type="text" id="blog-content" name="blog-content" required>
        <br>
        <label for="released">Date Posted:</label>
        <input type="date" id="post-date" name="post-date" required>
        <br>
        <br>
        <button type="submit">Post Blog</button>
    </form>
    <a href="/">Back to HomePage</a>
</body>
</html>


