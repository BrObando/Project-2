<%- include('../partials/newsheader') %>
<h1><%= title %></h1>

<form action="/blogs/index" method="POST">
    <label for="imageUrl">Image URL:</label>
    <input type="text" id="blog-image" name="imageUrl">
    <br>
    <label for="title">Title:</label>
    <input type="text" id="blog-title" name="title" required>
    <br>
    <label for="author">Author:</label>
    <input type="text" id="author" name="author" required>
    <br>
    <label for="blog-content">Content:</label>
    <input type="text" id="blog-content" name="content" required>
    <br>
    <label for="post-date">Date Posted:</label>
    <input type="date" id="post-date" name="createdAt" required>
    <br>
    <br>
    <button type="submit">Post Blog</button>
</form>
<a href="/">Back to HomePage</a>
</body>
</html>


