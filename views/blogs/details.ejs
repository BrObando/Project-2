<%- include('../partials/header') %>
<h1>All Blog Posts</h1>
<body>


<div id="blog-post">
        <% blogs.forEach(blog => { %>
            <tr>
                <th>Title:</th><td><%= blog.title %></td><br>
                <th>Author: </th><td><%= blog.author %></td> <br>
                <th>Date Posted: </th><td><%= blog.createdAt %></td><br>
                <%= blog.content %></td><br> 
            </tr>
        <% }) %>
</div>
    <a href="/blogs/new">Create a blog post</a>
</body>

