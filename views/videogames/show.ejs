<%- include('../partials/blankheader') %>

    <center> <h1>Game</h1>
>>>>>>> development
    <div>
      <% if (game.imageUrl) { %>
        <img src="<%= game.imageUrl %>" alt="Videogame Image" />
      <% } %>
        <h2><%= game.title %></h2>
        <p>Genre: <%= game.genre %></p>
        <p>Platform: <%= game.platform %></p>
        <p>Release Date: <%= game.released.toDateString() %></p>
        <p>ESRB Rating: <%= game.ESRB %></p>
        <a href="/">Back to Homepage</a>
    </div> </center>

<center>
   <h2>Reviews</h2>
  
    <ul>
      <% if (game.reviews.length > 0) { %>
        <% game.reviews.forEach(review => { %>
          <li>
            <td class="review-user"><img alt="avatar" src="<%= review.userAvatar %>" referrerpolicy="no-referrer" ><%= review.userName %></td>
            <h3>Title: <%= review.title %></h3>
            <p>Rating: <%= review.rating %></p>
            <p><%= review.content %></p>
          </li>
            <% if (user) { %>
              <form action="/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
        <% }) %> 
      <% } else { %>
        <p>No reviews available for this game.</p>
      <% } %>
      <% if (user) { %>
      
      <!-- new review link -->
      <a href="/reviews/videogames/<%= game._id %>/reviews/new">Add a Review</a>
      <% } %> 
    </ul>
</body>
</html>
</center>





